{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "Bundle": ["src/utils/Bundle"],
      "Fetch": ["src/utils/Fetch"],
      "Platform/*": ["src/components/platform/*"],
      "Utils/*": ["src/utils/*"],
      "User/*": ["src/components/platform/user/*"],
      "API": ["src/utils/api"],
      
      "UserStore": ["src/components/platform/user/store"]
    },
    "outDir": "./dist",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es5",
    "jsx": "react",
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
//    "noUnusedParameters": true,
//    "allowUnreachableCode": false,
    "lib": [
      "es5",
      "es2015.promise",
      "es2015",
      "dom"
    ]
  },
  "awesomeTypescriptLoaderOptions": {

  },
  /* "awesomeTypescriptLoaderOptions": {
    "useBabel": true,
    "babelOptions": {
      "presets": ["es2015", "stage-0", "react"],
      "plugins": [
        [ "import", { "libraryName": "antd", "style": true }]
      ]
    },
    "useCache": false,
    "emitRequireType": false
  }, */
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "dist",
    "node_modules"
  ]
}